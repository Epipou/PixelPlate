{% extends 'base.html.twig' %}

{% block title %}Plate{% endblock %}

{% block body %}
    <h1>Plate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plate.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plate.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if plate.image %}
                    <img src="{{ asset('images/' ~ plate.image) }}" alt="{{ plate.name }}" width="160" height="160">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plate_index') }}">back to list</a>

    <a href="{{ path('app_plate_edit', {'id': plate.id}) }}">edit</a>

    {{ include('plate/_delete_form.html.twig') }}
{% endblock %}
