{% extends 'base.html.twig' %}

{% block title %}Réserver une table{% endblock %}

{% block body %}
<div class="container mt-page">
    <h1>Réserver une table</h1>

    <form method="post" action="{{ path('reservation_step2') }}" class="form-reservation">

        <div class="form-group row">
            <label for="couverts" class="form-label">Nombre de couverts :</label>
            <div class="form-field">
                <select name="couverts" id="couverts" class="form-control" required>
                    {% for i in 1..8 %}
                        <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="date" class="form-label">Date :</label>
            <div class="form-field">
                <input type="date" name="date" id="date" class="form-control" min="{{ "now"|date('Y-m-d') }}" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="horaire" class="form-label">Horaire :</label>
            <div class="form-field">
                <select name="horaire" id="horaire" class="form-control" required>
                    {% set horaires = ['11:30', '13:30', '18:30', '20:30'] %}
                    {% for heure in horaires %}
                        <option value="{{ heure }}">{{ heure }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-purple">Suivant</button>
        </div>
    </form>
</div>
{% endblock %}
