{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="admin-carte-container">
    <h1 class="admin-title">Créer un compte</h1>

    <div class="container-form-bloc">
        {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}

            {{ form_row(registrationForm.name, {
                label: 'Nom'
            }) }}
            
            {{ form_row(registrationForm.email, {
                label: 'Adresse email'
            }) }}

            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}

            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn-purple">S'inscrire</button>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
